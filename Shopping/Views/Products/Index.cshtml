
@{
    ViewData["Title"] = "المنتجات";
    var items = (List<ProductModel>)ViewData["products"];
    var color = ViewData["Color"];
   
}

<h3>جميع المنتجات</h3>

<table class="table table-dark table-hover" @*style="background-color:@color" *@>
    <thead>
        <tr>
            <th scope="col">رقم المنتج</th>
            <th scope="col">الأسم</th>
            <th scope="col">السعر</th>
            <th scope="col">الصورة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price ريال</td>
                <td><img style="width:200px; height:200px" src="@item.Image" alt="@item.Image" /></td>
                <td> <a href="/Products/Details/@item.Id"> <button type="button" class="btn btn-danger"> المزيد </button></a></td>
            </tr>
        }
    </tbody>
</table>
