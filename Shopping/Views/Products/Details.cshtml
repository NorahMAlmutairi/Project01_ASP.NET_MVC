
@{
    ViewData["Title"] = "تفاصيل المنتج";
    var items = (ProductModel)ViewData["products"];
    var color = ViewData["Color"];

}



<h3>التفاصيل</h3>
<table class="table table-dark table-hover" @*style="background-color:@color" *@>
    <thead>
        <tr>
            <th scope="col">رقم المنتج</th>
            <th scope="col">الأسم</th>
            <th scope="col">السعر</th>
            <th scope="col">الصورة</th>
        </tr>
    </thead>
    <tbody>
    
            <tr>
                <th scope="row">@items.Id</th>
                <td>@items.Name</td>
                <td>@items.Price</td>
                <td><img style="width:200px; height:200px" src="@items.Image" alt="@items.Image" /></td>
               
            </tr>
        
    </tbody>
</table>
